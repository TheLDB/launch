[user]
	email = aarnavtale@icloud.com
	name = Aarnav Tale
	signingkey = AA804838ACF0909C1713F4283205E18CEDD2C007
	github = tale
[tag]
	forceSignAnnotated = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.config/git/.gitignore
	hooksPath = ~/.config/git/hooks
[pull]
	rebase = true
[init]
	defaultBranch = main
[protocol]
	version = 2
[submodule]
	fetchJobs = 4
[color]
	ui = auto
[alias]
	redo = commit --amend -S
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[push]
	autoSetupRemote = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[user]
	email = aarnav@tale.me
	name = Aarnav Tale
	signingkey = 31C78284
	github = tale
[tag]
	forceSignAnnotated = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.dotfiles/.gitignore
	hooksPath = ~/.dotfiles/githooks
[pull]
	rebase = true
[init]
	defaultBranch = main
[protocol]
	version = 2
[submodule]
	fetchJobs = 4
[color]
	ui = auto
[alias]
	redo = commit --amend -S
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
